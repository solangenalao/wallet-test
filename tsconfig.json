{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2017",
    "strict": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"],
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "App.tsx"], 
  "exclude":["node_modules"]
}
